<h1>Editing Book</h1>

<% if @book.errors.any? %>

  <% if @book.errors.count == 2 %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% else %>
    <%= @book.errors.count %> error prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="form">
    <p class="field">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <p class="field">Body</p>
    <%= f.text_area :body %>
  </div>


  <%= f.submit 'Update Book', class: "btn" %><br>
<% end %>

<span><%= link_to 'Show', book_path(@book.id) %></span>
