<h1>Eding book</h1>

<%= form_with model: @book, url: update_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %><br>
<% end %>

<span><%= link_to 'Show', show_path(@book.id) %></span>
<span>|</span>
<span><%= link_to 'Back', "/books" %></span>